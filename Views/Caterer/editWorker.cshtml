@model Pro3_Sem3.Models.Worker

@{
    ViewData["Title"] = "editWorker";
    Layout = "~/Views/Shared/_CatererLayout.cshtml";
}

<h1>Edit Worker</h1>

<hr />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="editWorker" asp-controller="Caterer" asp-route-id="@Model.Workerid">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Workerid" />
            <div class="form-group">
                <label class="control-label">Worker Name</label>
                <input asp-for="Wokername" class="form-control" />
                <span asp-validation-for="Wokername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Phone</label>
                <input asp-for="Workerphone" class="form-control" />
                <span asp-validation-for="Workerphone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Address</label>
                <input asp-for="Workeraddress" class="form-control" />
                <span asp-validation-for="Workeraddress" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group">
                <label class="control-label">Salary</label>
                <input asp-for="Workersalary" class="form-control" />
                <span asp-validation-for="Workersalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Position</label>
                <input asp-for="Workertype" class="form-control" />
                <span asp-validation-for="Workertype" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />  &nbsp;|&nbsp;
              
                <a asp-action="WorkerListOfRestaurant" asp-controller="Caterer" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

